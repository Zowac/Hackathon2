{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <h1 class="titrePrincipal">Tableau des m√©dailles</h1>


    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
        <tr>
            <th>Village</th>
            <th>Poney</th>
            <th>Cavalier</th>
            <th>Or</th>
            <th>Argent</th>
            <th>Bronze</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.village }}</td>
                <td>{{ equipe.poney }} <img style="width:100px" class="pony" src="{{ asset('images/'~equipe.image) }}" alt=""></td>
                <td>{{ equipe.cavalier }}</td>
                <td>{{ equipe.medailleOr }}</td>
                <td>{{ equipe.medailleArgent }}</td>
                <td>{{ equipe.medailleBronze }}</td>
                <td>{{ equipe.totalMedailles }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'footer.html.twig' %}

{% endblock %}

{% block stylesheets %}

    <style>

        .titrePrincipal {
            font-family: 'Bowlby One SC', cursive;
            text-align: center;
            margin-top: 20px;
        }

        tr{
        text-align: center;
        }

    </style>

{% endblock %}
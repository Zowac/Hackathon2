{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row">
            <h1 class="offset-4">Equipes list : </h1>
        </div>
        <br>
        <br>

        <table class="table table-striped table-bordered table-sm">
            <thead class="thead-dark">
            <tr>
                <th>Village</th>
                <th>Poney</th>
                <th>Cavalier</th>
                <th>Image</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in equipes %}
                <tr>
                    <td>{{ equipe.village }}</td>
                    <td>{{ equipe.poney }}</td>
                    <td>{{ equipe.cavalier }}</td>
                    <td><img style="width:100px" class="pony" src="{{ asset('images/'~equipe.image) }}" alt=""></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

    {% include 'footer.html.twig' %}
{% endblock %}

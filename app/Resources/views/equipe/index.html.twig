{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="titrePrincipal">Liste des équipes</h1>

    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Village</th>
                <th>Poney</th>
                <th>Cavalier</th>
                <th>Image</th>
                <th>Médailles d'or</th>
                <th>Médailles d'argent</th>
                <th>Médailles de bronz</th>
                <th>Total de médailles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td><a href="{{ path('equipe_show', { 'id': equipe.id }) }}">{{ equipe.id }}</a></td>
                <td>{{ equipe.village }}</td>
                <td>{{ equipe.poney }}</td>
                <td>{{ equipe.cavalier }}</td>
                <td>{{ equipe.image }}</td>
                <td>{{ equipe.medailleOr }}</td>
                <td>{{ equipe.medailleArgent }}</td>
                <td>{{ equipe.medailleBronze }}</td>
                <td>{{ equipe.totalMedailles }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('equipe_show', { 'id': equipe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('equipe_edit', { 'id': equipe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('equipe_new') }}">Ajouter une équipe</a>
        </li>
    </ul>
{% endblock %}

{% block stylesheets %}

<style>

    .titrePrincipal {
        font-family: 'Bowlby One SC';
        text-align: center;
        margin-top: 20px;
    }

</style>

{% endblock %}